<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.giftsearcher.giftsearcherclient.AdvancedSearchActivity"
    tools:showIn="@layout/activity_advanced_search"
    android:id="@+id/clAdvancedSearch">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="140dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorLight"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="14dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPriceFrom"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorBackgroudApp"
                android:hint="Цена от"
                android:inputType="number"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPriceTo"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorBackgroudApp"
                android:hint="Цена до"
                android:inputType="number"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAgeFrom"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorBackgroudApp"
                android:hint="Возраст от"
                android:inputType="number"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAgeTo"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/colorBackgroudApp"
                android:hint="Возраст до"
                android:inputType="number"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@color/colorBackgroudApp">

            <Spinner
                android:id="@+id/spinnerHoliday"
                android:layout_width="172dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp" />

            <Spinner
                android:id="@+id/spinnerHobby"
                android:layout_width="172dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@color/colorBackgroudApp">

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSearchGift"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/red"
                android:hint="@string/search" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/searchGiftsListView"
        android:layout_width="367dp"
        android:layout_height="354dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.993"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.529" />


</android.support.constraint.ConstraintLayout>

